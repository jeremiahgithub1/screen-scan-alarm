<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <EditText
        android:id="@+id/targetEdit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Text/symbol to detect"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/saveTargetBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save target"
        app:layout_constraintTop_toBottomOf="@id/targetEdit"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/toggleBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start"
        app:layout_constraintTop_toBottomOf="@id/saveTargetBtn"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/pickMp3Btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select alarm MP3"
        app:layout_constraintTop_toBottomOf="@id/saveTargetBtn"
        app:layout_constraintStart_toEndOf="@id/toggleBtn"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/statusTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Status: stopped"
        app:layout_constraintTop_toBottomOf="@id/toggleBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
